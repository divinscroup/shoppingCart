
<div class="container" style="margin-top:50px">
  <h1>Greetings!</h1>
  <p>Welcome to {{title}}</p>
</div>
<div class="row">
  {{# each items }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ this.imgPath }}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">{{ this.description }}</p>
        <div class="clearfix">
            <div class="price pull-left" name="price">
                ${{ this.price }}
            </div>
            <a href="/add-to-cart/{{this.id}}" class="btn btn-primary pull-right" role="button">Add to cart <i class="fas fa-shopping-cart"></i></a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}